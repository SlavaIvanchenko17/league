{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
      "airbnb-base", 
      "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": ["error",
        {
          "arrowParens": "always",
          "bracketSpacing": true,
          "insertPragma": false,
          "printWidth": 90,
          "semi": true,
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "all",
          "useTabs": false
        }],
      "no-unused-vars": "warn",
      "no-console": 0,
      "func-names": 0,
      "no-process-exit": 0,
      "object-shorthand": 0,
      "class-methods-use-this": 0,
      "global-require": 0,  
      "no-restricted-syntax": 0, 
      "no-continue": 0,
      "import/no-dynamic-require": 0,
      "strict": 0,
      "max-classes-per-file": 0
    }
}